<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size100"
    android:layout_marginLeft="@dimen/size10"
    android:layout_marginTop="@dimen/size5"
    android:layout_marginRight="@dimen/size10"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/size2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="@dimen/size80"
            android:layout_height="@dimen/size80"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/size2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/size10"
            android:layout_toStartOf="@+id/iv_bookmark"
            android:layout_toEndOf="@+id/iv_poster"
            android:orientation="vertical"
            android:paddingTop="@dimen/size10"
            android:paddingBottom="@dimen/size10">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size2" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="@dimen/size30"
            android:layout_height="@dimen/size30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size10"
            tools:src="@drawable/un_bookmarked" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
